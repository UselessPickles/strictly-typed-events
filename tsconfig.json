/* Default/base compiler config for IDE and other tools to discover by default */
{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["es6"],
        "types": ["jest", "node"],

        "strict": true,
        "alwaysStrict": true,

        "moduleResolution": "node",
        "esModuleInterop": true
    },
    "include": ["src"]
}
